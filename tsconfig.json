{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./@types",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./@types",
    "./node_modules",
    "./dist"
  ]
}